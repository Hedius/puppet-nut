[<%= @user %>]
	password = <%= @password %>
<% if @upsmon -%>
	upsmon <%= @upsmon %>
<% else -%>
<%   if @actions -%>
<%     @actions.each do |a| -%>
	actions = <%= a %>
<%     end -%>
<%   end -%>
<%   if @instcmds -%>
<%     @instcmds.each do |i| -%>
	instcmds = <%= i %>
<%     end -%>
<%   end -%>
<% end -%>
